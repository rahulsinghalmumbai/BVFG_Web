@{
    ViewData["Title"] = "Members";
    ViewData["SubTitle"] = "Add New Member";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="form-container">
    <h2 class="form-title">Add New Member</h2>

    <form class="member-form" action="/Admin/AddMember" method="post" id="addMemberForm">
        <div class="form-grid">
            <!-- Personal Information Section -->
            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-user-circle"></i> Personal Information
                </h3>
                <div class="form-group">
                    <label for="Name">Full Name <span class="required">*</span></label>
                    <input type="text" id="Name" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="Address">Address</label>
                    <input id="Address" name="Address" rows="2"></input>
                </div>
                <div class="form-group">
                    <label for="City">City</label>
                    <input type="text" id="City" name="City">
                </div>
                <div class="form-group">
                    <label for="DOB">Date of Birth</label>
                    <input type="date" id="DOB" name="DOB" class="date-input">
                </div>
            </div>

            <!-- Contact Information Section -->
            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-phone-alt"></i> Contact Information
                </h3>
                <div class="form-group">
                    <label for="Mobile1">Mobile 1 <span class="required">*</span></label>
                    <div class="input-with-icon">
                        <i class="fas fa-mobile-alt"></i>
                        <input type="tel" id="Mobile1" name="Mobile1" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Mobile2">Mobile 2</label>
                    <div class="input-with-icon">
                        <i class="fas fa-mobile-alt"></i>
                        <input type="tel" id="Mobile2" name="Mobile2">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Mobile3">Mobile 3</label>
                    <div class="input-with-icon">
                        <i class="fas fa-mobile-alt"></i>
                        <input type="tel" id="Mobile3" name="Mobile3">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Telephone">Telephone</label>
                    <div class="input-with-icon">
                        <i class="fas fa-phone"></i>
                        <input type="tel" id="Telephone" name="Telephone">
                    </div>
                </div>
            </div>

            <!-- Email Information Section -->
            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-envelope"></i> Email Information
                </h3>
                <div class="form-group">
                    <label for="Email1">Primary Email</label>
                    <div class="input-with-icon">
                        <i class="fas fa-envelope"></i>
                        <input type="email" id="Email1" name="Email1">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Email2">Secondary Email</label>
                    <div class="input-with-icon">
                        <i class="fas fa-envelope"></i>
                        <input type="email" id="Email2" name="Email2">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Email3">Other Email</label>
                    <div class="input-with-icon">
                        <i class="fas fa-envelope"></i>
                        <input type="email" id="Email3" name="Email3">
                    </div>
                </div>
            </div>

            <!-- Company Information Section -->
            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-building"></i> Company Information
                </h3>
                <div class="form-group">
                    <label for="Company">Company Name</label>
                    <div class="input-with-icon">
                        <i class="fas fa-briefcase"></i>
                        <input type="text" id="Company" name="Company">
                    </div>
                </div>
                <div class="form-group">
                    <label for="CompAddress">Company Address</label>
                    <input id="CompAddress" name="CompAddress" rows="2"></input>
                </div>
                <div class="form-group">
                    <label for="CompCity">Company City</label>
                    <div class="input-with-icon">
                        <i class="fas fa-map-marker-alt"></i>
                        <input type="text" id="CompCity" name="CompCity">
                    </div>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Save Member
            </button>
            <button type="button" class="btn btn-secondary" id="resetBtn">
                <i class="fas fa-undo"></i> Reset
            </button>
        </div>
    </form>
</div>

<style>
    /* Form Container */
    .form-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        padding: 30px;
        margin-top: 20px;
    }

    .form-title {
        font-size: 24px;
        color: #333;
        margin-bottom: 30px;
        padding-bottom: 15px;
        border-bottom: 1px solid #e2e8f0;
        display: flex;
        align-items: center;
    }

        .form-title i {
            margin-right: 10px;
            color: #00BCD4;
        }

    /* Form Grid Layout */
    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 25px;
        margin-bottom: 30px;
    }

    /* Form Sections */
    .form-section {
        background: #f8fafc;
        padding: 20px;
        border-radius: 8px;
        border-left: 4px solid #00BCD4;
    }

    .section-title {
        font-size: 18px;
        color: #333;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
    }

        .section-title i {
            margin-right: 10px;
            color: #00BCD4;
            font-size: 16px;
        }

    /* Form Groups */
    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #555;
        }

    .required {
        color: #ff4757;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
        width: 100%;
        padding: 12px 15px;
        padding-left: 35px;
        border: 1px solid #e2e8f0;
        border-radius: 6px;
        font-size: 14px;
        transition: all 0.3s ease;
    }

    .form-group textarea {
        min-height: 80px;
        padding-left: 15px;
    }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            border-color: #00BCD4;
            box-shadow: 0 0 0 3px rgba(0,188,212,0.1);
            outline: none;
        }

    /* Input with Icons */
    .input-with-icon {
        position: relative;
    }

        .input-with-icon i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
            font-size: 16px;
        }

    /* Date Input */
    .date-input {
        padding-left: 15px !important;
    }

    /* Form Actions */
    .form-actions {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
        padding-top: 20px;
        border-top: 1px solid #e2e8f0;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
        }

        .form-actions {
            flex-direction: column;
        }

        .btn {
            width: 100%;
        }
    }

    @@media (max-width: 480px) {
        .form-container {
            padding: 20px 15px;
        }

        .form-section {
            padding: 15px;
        }
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Auto-close alert after 5 seconds
        const alert = document.querySelector('.alert');
        if (alert) {
            setTimeout(() => {
                alert.classList.add('fade');
                setTimeout(() => alert.remove(), 150);
            }, 5000);
        }

        // Update form submission to use AJAX
        const form = document.getElementById('addMemberForm');
        form.addEventListener('submit', async function(e) {
            e.preventDefault();

            try {
                const formData = new FormData(form);
                const response = await fetch(form.action, {
                    method: 'POST',
                    body: formData,
                    headers: {
                        'Accept': 'application/json'
                    }
                });

                if (response.redirected) {
                    window.location.href = response.url;
                } else {
                    const result = await response.json();
                    if (result.success) {
                        showSuccessMessage(result.message);
                        form.reset();
                    } else {
                        alert(result.message || 'Failed to save member');
                    }
                }
            } catch (error) {
                console.error('Error:', error);
                alert('An error occurred while saving');
            }
        });

        function showSuccessMessage(message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-success alert-dismissible fade show';
            alertDiv.innerHTML = `
                <i class="fas fa-check-circle me-2"></i> ${message}
                <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close"></button>
            `;
            document.querySelector('.form-container').prepend(alertDiv);

            setTimeout(() => {
                alertDiv.classList.add('fade');
                setTimeout(() => alertDiv.remove(), 150);
            }, 5000);
        }

        // Reset button functionality
        document.getElementById('resetBtn').addEventListener('click', function() {
            form.reset();
        });
    });
</script>