@{
    ViewData["Title"] = "Members";
    ViewData["SubTitle"] = "Add New Member";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i> @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="form-container">
    <h2 class="form-title">Add New Member</h2>

    <form class="member-form" action="/Admin/AddMember" method="post" id="addMemberForm">
        <div class="form-grid">
            <!-- Personal Information Section -->
            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-user-circle"></i> Personal Information
                </h3>
                <div class="form-group">
                    <label for="Name">Full Name <span class="required">*</span></label>
                    <input type="text" id="Name" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="Address">Address</label>
                    <div class="input-with-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    <input id="Address" name="Address" rows="2"></input>
                    </div>
                </div>
                <div class="form-group">
                    <label for="City">City</label>
                    <div class="input-with-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    <input type="text" id="City" name="City">
                    </div>
                </div>
                <div class="form-group">
                    <label for="DOB">Date of Birth</label>
                    <input type="date" id="DOB" name="DOB" class="date-input">
                </div>
            </div>

            <!-- Contact Information Section -->
            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-phone-alt"></i> Contact Information
                </h3>
                <div class="form-group">
                    <label for="Mobile1">Mobile 1 <span class="required" style="font-size:12px;">* Mobile 1 can not duplicate</span></label>
                    <div class="input-with-icon">
                        <i class="fas fa-mobile-alt"></i>
                        <input type="tel" id="Mobile1" name="Mobile1" required>
                    </div>
                </div>
                <div class="form-group">
                    <label for="Mobile2">Mobile 2</label>
                    <div class="input-with-icon">
                        <i class="fas fa-mobile-alt"></i>
                        <input type="tel" id="Mobile2" name="Mobile2">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Mobile3">Mobile 3</label>
                    <div class="input-with-icon">
                        <i class="fas fa-mobile-alt"></i>
                        <input type="tel" id="Mobile3" name="Mobile3">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Telephone">Telephone</label>
                    <div class="input-with-icon">
                        <i class="fas fa-phone"></i>
                        <input type="tel" id="Telephone" name="Telephone">
                    </div>
                </div>
            </div>

            <!-- Email Information Section -->
            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-envelope"></i> Email Information
                </h3>
                <div class="form-group">
                    <label for="Email1">Primary Email<span class="required" >*</span></label>
                    <div class="input-with-icon">
                        <i class="fas fa-envelope"></i>
                        <input type="email" id="Email1" name="Email1">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Email2">Secondary Email</label>
                    <div class="input-with-icon">
                        <i class="fas fa-envelope"></i>
                        <input type="email" id="Email2" name="Email2">
                    </div>
                </div>
                <div class="form-group">
                    <label for="Email3">Other Email</label>
                    <div class="input-with-icon">
                        <i class="fas fa-envelope"></i>
                        <input type="email" id="Email3" name="Email3">
                    </div>
                </div>
            </div>

            <!-- Company Information Section -->
            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-building"></i> Company Information
                </h3>
                <div class="form-group">
                    <label for="Company">Company Name</label>
                    <div class="input-with-icon">
                        <i class="fas fa-briefcase"></i>
                        <input type="text" id="Company" name="Company">
                    </div>
                </div>
                <div class="form-group">
                    <label for="CompAddress">Company Address</label>
                    <div class="input-with-icon">
                        <i class="fas fa-map-marker-alt"></i>
                    <input id="CompAddress" name="CompAddress" rows="2"></input>
                    </div>
                </div>
                <div class="form-group">
                    <label for="CompCity">Company City</label>
                    <div class="input-with-icon">
                        <i class="fas fa-map-marker-alt"></i>
                        <input type="text" id="CompCity" name="CompCity">
                    </div>
                </div>
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Save Member
            </button>
            <button type="button" class="btn btn-secondary" id="resetBtn">
                <i class="fas fa-undo"></i> Reset
            </button>
        </div>
    </form>
</div>

<style>
    /* Form Container */
    .form-container {
        background: white;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        padding: 30px;
        margin-top: 20px;
        max-width: 100%;
        overflow-x: hidden;
    }

    .form-title {
        font-size: 24px;
        color: #333;
        margin: 0 0 30px 0;
        padding-bottom: 15px;
        border-bottom: 1px solid #e2e8f0;
        display: flex;
        align-items: center;
    }

        .form-title i {
            margin-right: 10px;
            color: #00BCD4;
        }

    /* Form Grid Layout */
    .form-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 25px;
        margin-bottom: 30px;
    }

    /* Form Sections */
    .form-section {
        background: #f8fafc;
        padding: 20px;
        border-radius: 8px;
        border-left: 4px solid #00BCD4;
    }

    .section-title {
        font-size: 18px;
        color: #333;
        margin: 0 0 20px 0;
        display: flex;
        align-items: center;
    }

        .section-title i {
            margin-right: 10px;
            color: #00BCD4;
            font-size: 16px;
        }

    /* Form Groups */
    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            font-weight: 500;
            color: #555;
        }

    .required {
        color: #ff4757;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
        width: 100%;
        padding: 12px 15px;
        border: 1px solid #e2e8f0;
        border-radius: 6px;
        font-size: 14px;
        transition: all 0.3s ease;
        box-sizing: border-box;
    }

    .input-with-icon input {
        padding-left: 40px;
    }

    .form-group textarea {
        min-height: 80px;
        resize: vertical;
    }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            border-color: #00BCD4;
            box-shadow: 0 0 0 3px rgba(0,188,212,0.1);
            outline: none;
        }

    /* Input with Icons */
    .input-with-icon {
        position: relative;
    }

        .input-with-icon i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
            font-size: 16px;
            z-index: 2;
        }

    /* Date Input */
    .date-input {
        padding-left: 15px !important;
    }

    /* Form Actions */
    .form-actions {
        display: flex;
        gap: 15px;
        justify-content: flex-end;
        padding-top: 20px;
        border-top: 1px solid #e2e8f0;
        flex-wrap: wrap;
    }

    /* Button Styles */
    .btn {
        padding: 12px 20px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
        font-size: 14px;
        font-weight: 500;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        gap: 8px;
        transition: all 0.3s ease;
        white-space: nowrap;
    }

    .btn-primary {
        background-color: #00BCD4;
        color: white;
    }

        .btn-primary:hover {
            background-color: #00ACC1;
        }

        .btn-primary:disabled {
            background-color: #cccccc;
            cursor: not-allowed;
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
        }

    /* Alert Styles */
    .alert {
        padding: 12px 15px;
        margin-bottom: 20px;
        border-radius: 6px;
        border: 1px solid transparent;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
    }

    .alert-danger {
        color: #721c24;
        background-color: #f8d7da;
        border-color: #f5c6cb;
    }

    .btn-close {
        background: none;
        border: none;
        font-size: 18px;
        cursor: pointer;
        opacity: 0.7;
    }

        .btn-close:hover {
            opacity: 1;
        }

    /* Responsive Design */
    @@media (max-width: 1024px) {
        .form-container

    {
        padding: 25px 20px;
    }

    .form-grid {
        gap: 20px;
    }

    }

    @@media (max-width: 768px) {
        .form-container

    {
        padding: 20px 15px;
        margin-top: 15px;
    }

    .form-title {
        font-size: 20px;
    }

    .form-grid {
        grid-template-columns: 1fr;
        gap: 15px;
    }

    .form-section {
        padding: 15px;
    }

    .section-title {
        font-size: 16px;
    }

    .form-actions {
        flex-direction: column;
        align-items: stretch;
    }

    .btn {
        width: 100%;
        justify-content: center;
    }

    }

    @@media (max-width: 480px) {
        .form-container

    {
        padding: 15px 10px;
        border-radius: 8px;
    }

    .form-title {
        font-size: 18px;
        margin-bottom: 20px;
    }

    .form-section {
        padding: 12px;
    }

    .section-title {
        font-size: 15px;
        margin-bottom: 15px;
    }

    .form-group {
        margin-bottom: 15px;
    }

        .form-group input,
        .form-group select,
        .form-group textarea {
            padding: 10px 12px;
            font-size: 13px;
        }

    .input-with-icon input {
        padding-left: 35px;
    }

    .input-with-icon i {
        left: 10px;
        font-size: 14px;
    }

    .btn {
        padding: 10px 15px;
        font-size: 13px;
    }

    }

    @@media (max-width: 360px) {
        .form-container

    {
        padding: 10px 8px;
    }

    .form-grid {
        gap: 10px;
    }

    .form-section {
        padding: 10px;
    }

    .form-group input,
    .form-group select,
    .form-group textarea {
        padding: 8px 10px;
    }

    .input-with-icon input {
        padding-left: 30px;
    }

    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        
        const alert = document.querySelector('.alert');
        if (alert) {
            setTimeout(() => {
                alert.classList.add('fade');
                setTimeout(() => alert.remove(), 150);
            }, 5000);
        }
        const form = document.getElementById('addMemberForm');

        form.addEventListener('submit', function(e) {
            const submitBtn = form.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;

            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Saving...';
            submitBtn.disabled = true;

        });

        function showSuccessMessage(message) {
            const alertDiv = document.createElement('div');
            alertDiv.className = 'alert alert-success alert-dismissible fade show';
            alertDiv.innerHTML = `
                <div>
                    <i class="fas fa-check-circle me-2"></i> ${message}
                </div>
                <button type="button" class="btn-close" data-dismiss="alert" aria-label="Close" onclick="this.parentElement.remove()">&times;</button>
            `;
            document.querySelector('.form-container').prepend(alertDiv);

            setTimeout(() => {
                if (alertDiv.parentNode) {
                    alertDiv.classList.add('fade');
                    setTimeout(() => alertDiv.remove(), 150);
                }
            }, 4000);
        }

        document.getElementById('resetBtn').addEventListener('click', function() {
            if (confirm('Are you sure you want to reset all fields?')) {
                form.reset();
            }
        });

        const phoneInputs = document.querySelectorAll('input[type="tel"]');
        phoneInputs.forEach(input => {
            input.addEventListener('input', function() {
                // Remove non-numeric characters except +, -, (), space
                this.value = this.value.replace(/[^0-9+\-\(\)\s]/g, '');
            });
        });

        const emailInputs = document.querySelectorAll('input[type="email"]');
        emailInputs.forEach(input => {
            input.addEventListener('blur', function() {
                if (this.value && !this.checkValidity()) {
                    this.style.borderColor = '#ff4757';
                } else {
                    this.style.borderColor = '#e2e8f0';
                }
            });
        });
    });
</script>